<core:View xmlns:core="sap.ui.core" 
           xmlns:mvc="sap.ui.core.mvc" 
           xmlns="sap.ui.commons"
           xmlns:m="sap.m"
		   controllerName="view.main">

      <Label text="SRM Part details example" />


		  <m:Table id="tableID"      fixedLayout="false"
		           items="{ path  : '/partFeatures/partDetails',  sorter: { path : 'NAME', descending: false }  }" >
		           
		     <m:headerToolbar>
				<m:Toolbar>
					<m:Title text="Basic Part Information" level="H2" />
					<m:ToolbarSpacer></m:ToolbarSpacer>
				<m:Button icon="sap-icon://download" press="onDataExport" />
				</m:Toolbar>
			</m:headerToolbar>
			
			<m:columns>
				<m:Column>
					<m:Text text="Name" />
				</m:Column>
				<m:Column>
					<m:Text text="Value" />
				</m:Column>		
			</m:columns>
			
			<m:items>
				<m:ColumnListItem>
					<m:cells>
						<m:Text text="{NAME}" />
						<m:Text text="{VALUE}" />
					</m:cells>
				</m:ColumnListItem>
			</m:items>
			
		  </m:Table>	  
		  	
</core:View>
	      