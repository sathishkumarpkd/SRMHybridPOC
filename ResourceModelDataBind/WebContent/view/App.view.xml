<mvc:View
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	<Panel headerText="{i18n>panelHeaderText}" class="sapUiResponsiveMargin" width="auto">
		<content>
			<Label text="{i18n>firstNameLabel}" class="sapUiSmallMargin"/>
			<Input value="{/firstNameModel}" valueLiveUpdate="true" width="200px" enabled="{/enabledModel}"/>
			<Label text="{i18n>lastNameLabel}" class="sapUiSmallMargin"/>
			<Input value="{/lastNameModel}" valueLiveUpdate="true" width="200px" enabled="{/enabledModel}"/>
			<CheckBox selected="{/enabledModel}" text="{i18n>enabledLabel}"/>
		</content>
	</Panel>
</mvc:View>
